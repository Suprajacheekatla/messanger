        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .player {
        width: 350px;
        background: white;
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }

    .player h2 {
        margin-bottom: 15px;
        color: #333;
    }

    .controls {
        margin: 20px 0;
    }

    button {
        padding: 10px 20px;
        border: none;
        border-radius: 50px;
        background: #667eea;
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
    }

    button:hover {
        background: #5563c1;
    }

    .progress-container {
        width: 100%;
        height: 8px;
        background: #ddd;
        border-radius: 10px;
        cursor: pointer;
        margin: 15px 0;
    }

    .progress {
        height: 100%;
        width: 0%;
        background: #667eea;
        border-radius: 10px;
    }

    .time {
        font-size: 14px;
        color: #555;
        display: flex;
        justify-content: space-between;
    }
